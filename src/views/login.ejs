<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display text-center">Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>
      <%- include('includes/messages.ejs'); %> 
    </div>
  </div>
</div>

<div class="form-margin">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg  my-5">
      <h4>Faça seu cadastro</h4>
      <p class="col-lg-5">Se você ainda não possui cadastro, preencha o formulário abaixo:</p>
      <div class="col-lg-5">
        <form class="form-register" action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <label for="exampleInputEmail1">Seu e-mail</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary my-2">Criar conta</button>
        </form>
      </div>
    </div>
    <div class="col-lg  my-5">
      <h4>Faça seu login.</h4>
      <p class="col-lg-5">Se você já possui uma conta, faça login abaixo:</p>
      <div class="col-lg-5">
        <form class="form-login" action="/login/enter" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <label for="exampleInputEmail1">Seu e-mail</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary my-2">Entrar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
